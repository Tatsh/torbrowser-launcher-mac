{
  "contributors": ["Andrew Udvare <audvare@gmail.com>"],
  "cspell": {
    "cache": {
      "useCache": true
    },
    "dictionaryDefinitions": [
      {
        "name": "main",
        "path": ".vscode/dictionary.txt"
      }
    ],
    "enableFileTypes": {
      "*": true
    },
    "enableGlobDot": true,
    "files": ["*"],
    "ignorePaths": [
      "*.1",
      "*.har",
      "*.lock",
      ".git/**",
      ".yarn/**/*.cjs",
      ".vscode/extensions.json",
      "dist/**",
      "man/**",
      "*.pbxproj",
      "*.xc*",
      "*.xib",
      ".yarn/**/*.cjs"
    ],
    "language": "en-GB",
    "languageSettings": [
      {
        "dictionaries": ["main"],
        "languageId": "*"
      }
    ],
    "useGitignore": true
  },
  "description": "Tor Browser Launcher for macOS, inspired by the Linux version.",
  "devDependencies": {
    "@prettier/plugin-xml": "^3.4.2",
    "cspell": "^9.2.1",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "prettier-plugin-ini": "^1.3.0",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-toml": "^2.0.6",
    "yarn-audit-fix": "^10.1.1"
  },
  "files": ["LICENSE.txt", "README.md"],
  "homepage": "https://tatsh.github.io/torbrowser-launcher-mac/",
  "keywords": ["macos", "package manager", "tor"],
  "license": "MIT",
  "markdownlint-cli2": {
    "config": {
      "MD033": {
        "allowed_elements": ["kbd"]
      },
      "default": true,
      "line-length": {
        "code_blocks": false,
        "line_length": 100,
        "tables": false
      }
    }
  },
  "name": "torbrowser-launcher-mac",
  "packageManager": "yarn@4.10.2",
  "prettier": {
    "endOfLine": "lf",
    "iniSpaceAroundEquals": true,
    "jsonRecursiveSort": true,
    "overrides": [
      {
        "files": ["package.json"],
        "options": {
          "parser": "json"
        }
      },
      {
        "files": [".swift-format"],
        "options": {
          "parser": "json"
        }
      },
      {
        "files": ["*.plist", "*.plist.in"],
        "options": {
          "parser": "xml"
        }
      }
    ],
    "plugins": [
      "@prettier/plugin-xml",
      "prettier-plugin-ini",
      "prettier-plugin-sort-json",
      "prettier-plugin-toml"
    ],
    "printWidth": 100,
    "reorderKeys": true,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Tatsh/torbrowser-launcher-mac.git"
  },
  "scripts": {
    "build": "cmake --preset=default && cmake --build build",
    "check-formatting": "swift-format lint -r . && cmake-format --check CMakeLists.txt TorBrowserLauncher/CMakeLists.txt TorBrowserLauncherTests/CMakeLists.txt && yarn prettier -c . && yarn markdownlint-cli2 '**/*.md' '#node_modules'",
    "check-spelling": "yarn cspell --no-progress './**/*'  './**/.*'",
    "format": "swift-format -i -r . && cmake-format -i CMakeLists.txt TorBrowserLauncher/CMakeLists.txt TorBrowserLauncherTests/CMakeLists.txt && prettier -w . && yarn markdownlint-cli2 --fix '**/*.md' '#node_modules'",
    "qa": "yarn check-spelling && yarn check-formatting"
  },
  "version": "0.1.0"
}
